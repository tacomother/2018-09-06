<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Lighthouse Scene
    link(rel="stylesheet", href="../css/main.css")
  body
    .scene
      .background
        .stars
          - for (var i = 0; i < 60; i++)
            .star
        .moon
        .mountains
          - for (var i = 0; i < 4; i++)
            .mountain
        .sea
          - for (var i = 0; i < 30; i++)
            .wave
          .boat
            .sail
            .sail
            .base
      .lighthouse-group
        .land
        .lighthouse-holder
          .shadow
          .lighthouse
          .top
            .light-container
              .light
            .rail
            .middle
            .roof
              .roof-light
            .glow
          .windows
            - for (var i = 0; i < 4; i++)
              .window
          .door
            .stairs